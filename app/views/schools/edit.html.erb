<% provide(:title, 'Edit School') %>

<h1>Add new school</h1>

<div class="row">
	<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
		<%= form_for(@school) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :school_name, class: 'form-control' %>

			<%= f.label :address %>
			<%= f.text_field :school_address, class: 'form-control' %>

			<%= f.label :description %>
			<%= f.text_field :school_description, class: 'form-control' %>

			<%= f.label :location %>
			<%= f.text_field :location, class: 'form-control' %>

			<%= f.label :category %>
			<%= f.select(:category, ["Federal", "State", "Private"])  %> <!-- f.select is used to create dropdown lists and has many ways of passing values -->

			<%= f.submit "Post", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>